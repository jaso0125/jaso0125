<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.Views.DetailPage"       
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="保存"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="ID" FontSize="Medium"/>
            <Label Text="【ID】" FontSize="Small"/>
            <Label Text="項目名" FontSize="Medium"/>
            <Entry Text="【項目名】" FontSize="Small"/>
            <Label Text="期日" FontSize="Medium"/>
            <Switch/>
            <DatePicker />
            <Label Text="完了" FontSize="Medium"/>
            <Switch/>
            <Label Text="作成日" FontSize="Medium"/>
            <Label Text="【yyyy-MM-dd】"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>